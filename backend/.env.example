# Backend Environment Configuration
# Copy this to .env and update with your secure values

# SECURITY WARNING: Generate a new secret key for production
SECRET_KEY=your-super-secret-key-here-change-this

# Database Configuration
DB_NAME=partyoria_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=prefer

# Security Settings
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ALLOW_ALL_ORIGINS=False

# CSRF Configuration
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com
CSRF_COOKIE_SECURE=True
SESSION_COOKIE_SECURE=True

# HTTPS Security (Enable in production)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Cache Configuration
CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
CACHE_LOCATION=redis://127.0.0.1:6379/1

# Email Configuration (for production)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password