from django.urls import path, include
from rest_framework.routers import DefaultRouter
from .views import EventViewSet, QuoteRequestViewSet, RSVPViewSet, event_milestones

router = DefaultRouter()
router.register(r'events', EventViewSet)
router.register(r'quotes', QuoteRequestViewSet)
router.register(r'rsvps', RSVPViewSet)

urlpatterns = [
    path('', include(router.urls)),
    path('events/milestones/<int:event_id>/', event_milestones, name='event-milestones'),
]